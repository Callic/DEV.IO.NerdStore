@model NSE.WebApp.MVC.Models.UsuarioLogin
@{
    ViewData["Title"] = "Log in";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-12">
        <section>
            <form method="post">
                <h4>Seja bem vindo e boas compras</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha"></label>
                    <input asp-for="Senha" type="password" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary">Entrar</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="Registro" asp-controller="Identidade"></a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}